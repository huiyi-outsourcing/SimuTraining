<Window x:Class="SimuTraining.windows.ExamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="战（现）场急救技术模拟训练系统" Height="752" Width="1280" WindowStyle="None"
        WindowState="Maximized" Icon="../icon.ico">
    <Window.Background>
        <ImageBrush ImageSource="../res/img/main_bg_second.png" />
    </Window.Background>
    <Grid Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition />
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- static layout -->
        <Line X1="0" X2="2000" Y1="100" Y2="100" Stroke="Black" StrokeThickness="4" Grid.Row="0" />
        <Line X1="0" X2="2000" Y1="0" Y2="0" Stroke="Black" StrokeThickness="4" Grid.Row="2" />

        <Image Grid.Row="0" Source="../res/img/head_title_second.png" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button Name="mainPage" Content="首页" Margin="20" Click="mainPage_Click" Focusable="False" />
            <Button Name="exit" Content="退出" Margin="20" Click="exit_Click" Focusable="False" />
        </StackPanel>
        <!-- end of static layout -->

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            
            <Grid Name="body">
                
            </Grid>
            
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Name="tag" Content="标记 / 取消" Click="tag_Click" Margin="0 0 10 0" />
                <Button Name="prev" Content="上一题" Click="prev_question" Margin="0 0 10 0" />
                <Button Name="next" Content="下一题" Click="next_question" Margin="0 0 10 0" />
                <Button Name="submit" Content="提交试卷" Click="submit_exam" Margin="0 0 100 0" />
            </StackPanel>
            
        </Grid>        
    </Grid>
</Window>
